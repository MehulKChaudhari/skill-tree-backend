{
  "family": "skilltree-task-family",
  "containerDefinitions": [
    {
      "name": "db",
      "image": "mysql",
      "command": ["--default-authentication-plugin=mysql_native_password"],
      "portMappings": [
        {
          "containerPort": 3306,
          "hostPort": 3306
        }
      ],
      "environment": [
        {
          "name": "MYSQL_DATABASE",
          "value": "skilltree"
        },
        {
          "name": "MYSQL_USER",
          "value": "testuser"
        },
        {
          "name": "MYSQL_PASSWORD",
          "value": "testpassword"
        },
        {
          "name": "MYSQL_ROOT_PASSWORD",
          "value": "password"
        }
      ],
      "memoryReservation": 512
    },
    {
      "name": "adminer",
      "image": "adminer",
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 9000
        }
      ],
      "memoryReservation": 256
    },
    {
      "name": "spring-boot-app",
      "image": "mehulkchaudhari/skill-tree-api:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ],
      "environment": [
        {
          "name": "SPRING_DATASOURCE_URL",
          "value": "jdbc:mysql://db:3306/skilltree"
        },
        {
          "name": "SPRING_DATASOURCE_USERNAME",
          "value": "testuser"
        },
        {
          "name": "SPRING_DATASOURCE_PASSWORD",
          "value": "testpassword"
        },
        {
          "name": "SPRING_JPA_HIBERNATE_DDL_AUTO",
          "value": "update"
        },
        {
          "name": "MYSQL_HOST",
          "value": "db"
        },
        {
          "name": "DB_NAME",
          "value": "skilltree"
        },
        {
          "name": "MYSQL_DB_USERNAME",
          "value": "testuser"
        },
        {
          "name": "MYSQL_DB_PASSWORD",
          "value": "testpassword"
        },
        {
          "name": "DB_DDL_POLICY",
          "value": "update"
        },
        {
          "name": "API_V1_PREFIX",
          "value": "/api/v1"
        },
        {
          "name": "SPRING_DATASOURCE_VERSION",
          "value": "8.1.0"
        }
      ],
      "memoryReservation": 512
    }
  ]
}
